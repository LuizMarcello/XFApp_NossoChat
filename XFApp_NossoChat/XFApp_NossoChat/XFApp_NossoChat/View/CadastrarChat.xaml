<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFApp_NossoChat.View.CadastrarChat"
             BackgroundColor="#5Ed055">
    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding noome}" Placeholder="Nome do chat" PlaceholderColor="#5Ed055" 
                   BackgroundColor="White" TextColor="#5Ed055"/>
            <Button BackgroundColor="Transparent" Text="Cadastrar" 
                    Command="{Binding CadastrarCommand}" TextColor="White"/>
            <Label Text="{Binding mensagem}" BackgroundColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>